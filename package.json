{
  "name": "amplify-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "next start",
    "test": "npm-run-all lint:* test:*",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig.ava.json ava",
    "lint:tsc": "tsc --noEmit",
    "lint:lint": "xo --fix",
    "lint:style": "stylelint src/styles/**/*.scss",
    "dev": "cross-env ENV=local next -p 4000",
    "build:files": "next build",
    "build:export": "next export",
    "build": "npm-run-all build:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolyaventuri/amplify-template.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kolyaventuri/amplify-template/issues"
  },
  "homepage": "https://github.com/kolyaventuri/amplify-template#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint:* && lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "xo --fix"
    ]
  },
  "xo": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "extends": [
      "xo-typescript",
      "plugin:@typescript-eslint/recommended",
      "xo-react/space"
    ],
    "extensions": [
      "ts"
    ],
    "space": true,
    "prettier": true,
    "compilerOptions": {
      "strict": true
    },
    "rules": {
      "@typescript-eslint/camelcase": 0,
      "@typescript-eslint/member-naming": [
        "error",
        {
          "private": "^__",
          "protected": "^_"
        }
      ],
      "indent": 0,
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "@typescript-eslint/prefer-readonly-parameter-types": 0
    },
    "overrides": [
      {
        "files": "test/**/*.ts?(x)",
        "rules": {
          "@typescript-eslint/explicit-function-return-type": 0,
          "@typescript-eslint/prefer-readonly-parameter-types": 0,
          "@typescript-eslint/no-unsafe-call": 0
        }
      },
      {
        "files": "src/**/*.ts?(x)",
        "rules": {
          "import/no-unassigned-import": 0
        }
      }
    ],
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "node"
    ],
    "include": [
      "**/*.ts?(x)"
    ],
    "ignore": [
      "**/*.js"
    ]
  },
  "ava": {
    "babel": {
      "compileEnhancements": false,
      "compileAsTests": [
        "test/helpers/**/*.ts"
      ]
    },
    "extensions": [
      "ts",
      "tsx"
    ],
    "files": [
      "test/**/*.test.ts?(x)"
    ],
    "require": [
      "ignore-styles",
      "esm",
      "ts-node/register",
      "tsconfig-paths/register",
      "./test/helpers/setup-enzyme.ts"
    ]
  },
  "dependencies": {
    "@zeit/next-sass": "^1.0.1",
    "next": "^9.4.1",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@types/react": "^16.9.35",
    "@types/sinon": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "ava": "^3.8.2",
    "browser-env": "^3.3.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.0.0",
    "eslint-config-xo": "^0.29.1",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-config-xo-typescript": "^0.29.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "esm": "^3.2.25",
    "husky": "^4.2.5",
    "ignore-styles": "^5.0.1",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.2",
    "stylelint": "^13.3.3",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.17.2",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.2",
    "xo": "^0.30.0"
  }
}
